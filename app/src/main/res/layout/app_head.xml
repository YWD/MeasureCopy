<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    tools:showIn="@layout/home_content">

    <ImageView
        android:id="@+id/head_left_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_gengduo"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/head_left_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/head_left_iv1"
        android:src="@drawable/icon_gengduo"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/head_title"
        android:textSize="17sp"
        android:textColor="@color/text_color_black"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/head_right_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_gengduo"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/head_right_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/head_right_iv1"
        android:src="@drawable/icon_gengduo"
        android:visibility="invisible" />

</RelativeLayout>